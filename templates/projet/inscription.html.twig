{% extends 'base.html.twig' %}

{% block title %}ACCUEIL{% endblock %}

{% block body %}

<!DOCTYPE html>
	<html>
			<head>
				<meta charset="UTF-8" />
				
				<!-- BOOSTSTRAP CSS -->
				<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

				<!-- CODE CSS -->
				<style>
				
					body
					{
						background-color: rgb(27,30,39);
					}
					
					.SectionPied
					{
						border-style: solid;
						width: 1000px;
						margin: auto;
						padding: 30px;
						text-align: center;
						background-color: rgb(229,229,231);
						opacity: 100px;
						
					}
					
					label
					{
						color: rgb(14,77,254);
					}
					
					footer
					{
						color: rgb(14,77,254);
						
					}
					
					
					
				</style>
			</head>
			
			<body>
			
				<!--<header>
					<p>
						<img src="logo.jpg" alt="logo du projet" />
					</p>
				</header>-->
				
				<nav class="navbar justify-content-center navbar-expand">
						<ul class="nav nav-pills">
							<li class="nav-item active">
								<a class="nav-link" href="index.html">| INSCRIPTION |</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">| CONNEXION |</a>
							</li>
						</ul>
				</nav>
				
				<div class="SectionPied">
				<section>
					<br/>
					<img src="logo.jpg" alt="logo" />
					<form class="formulaire" action="/login" method="POST" enctype="multipart/form-data">
						<!--Pour chaque ligne du formulaire, il nous fait une div avec une class form-group-->
						<!--Pour chaque entrée du formulaire, j'ai rajouté la class cl-sm-6 pour pourvoir les centrés tout en mettant après chaque form-group le row qui indique que c'est pour la ligne-->
						<div class=”form-group” row>
							<label for=”Email”>IDENTIFIANT</label>
							<!--On met required pour les entrées à remplir obligatoirement, ainsi si l'utilisateur à oublier d'indiquer certaines données obligatoires la page ne sera pas validée-->
							<div class="col-sm-12">
								<input type="text" class="form-control" id="Email" name="email" placeholder="Email">
							</div>
						</div>
						<br/>
						<div class=”form-group” >
							<label for=”Secret”>NOM</label>
							<div class="col-sm-12">
								<input type="text" class="form-control" id="nom" name="nom"  placeholder="Ton Nom" required>
							</div>
						</div>
						<br/>
						<div class=”form-group” >
							<label for=”Secret”>PRENOM</label>
							<div class="col-sm-12">
								<input type="text" class="form-control" id="prenom" name="prenom" placeholder="Ton Prenom">
							</div>
						</div>
						<br/>
						<div class=”form-group” >
							<label for=”Secret”>MOT DE PASSE</label>
							<div class="col-sm-12">
								<input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
							</div>
						</div>
						<br/>
						<div class=”form-group” row>
							<div class="col-sm-12">
								<button type="submit" class="btn btn-primary">Envoyer</button>
							</div>
						</div>
						<br/>
					</form>
				</section>
				<br/>
				<footer class="container">
					<div class="row">
						<div class="col">
							A propos
						</div>
						<div class="col">
							Vie privée
						</div>
						<div class="col">
							Conditions d'utilisation
						</div>
					</div>
				</footer>
				</div>
				
			</body>
	</html>
{% endblock %}